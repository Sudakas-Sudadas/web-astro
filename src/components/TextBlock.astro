---
export interface Props {
    class?: string;
}

import Triangle from './Triangle.astro';
---

<div
    class={'container mx-auto p-4 relative overflow-hidden ' +
        Astro.props.class}
>
    <div class='absolute inset-0 mt-7 ml-7 bg-mora-50 -z-10'></div>

    <Triangle
        class='absolute inset-0 w-2/3 sm:1/2 mt-32 sm:mt-16 -scale-x-100 text-white -z-10'
    />

    <div
        class='p-4 font-serif text-justify text-sm 2xl:text-base border border-mora-100'
    >
        <slot />
    </div>
</div>
